<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="me.colinhowes.rollinitiative.MainActivity">

    <ImageView
        android:contentDescription="@string/app_name"
        android:id="@+id/logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:paddingTop="16dp"
        android:background="@color/transparent"
        android:src="@drawable/logo" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:paddingBottom="64dp">
        <ImageButton
            android:id="@+id/combat_button"
            android:contentDescription="@string/start_combat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:background="@color/transparent"
            android:src="@drawable/combat_button"
            android:onClick="startButtonActivity" />

        <ImageButton
            android:id="@+id/character_button"
            android:contentDescription="@string/edit_characters"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="64dp"
            android:layout_alignBottom="@id/combat_button"
            android:background="@color/transparent"
            android:src="@drawable/character_button"
            android:onClick="startButtonActivity" />

    </RelativeLayout>

</RelativeLayout>
